= form_tag sessions_path, class: "form-horizontal" do
  .form-group
    .col-sm-offset-2.col-sm-2
      %h1 Login
  .form-group
    = label_tag :email, nil, class: "col-sm-2 control-label"
    .col-sm-2
      = text_field_tag :email, nil, class: "form-control"
  .form-group
    = label_tag :password, nil, class: "col-sm-2 control-label"
    .col-sm-2
      = password_field_tag :password, nil, class: "form-control"
  .form-group
    .col-sm-offset-2.col-sm-2
      = submit_tag "Log in", class: "btn btn-default"
      = link_to 'Back', root_path, class: "btn btn-default"