= form_for @specialisation_category do |f|
  - if @specialisation_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@specialisation_category.errors.count, "error")} prohibited this specialisation_category from being saved:"
      %ul
        - @specialisation_category.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :spec_cat_id
    = f.number_field :spec_cat_id
  .actions
    = f.submit 'Save'
