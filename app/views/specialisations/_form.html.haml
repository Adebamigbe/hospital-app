= form_for @specialisation do |f|
  - if @specialisation.errors.any?
    #error_explanation
      %h2= "#{pluralize(@specialisation.errors.count, "error")} prohibited this specialisation from being saved:"
      %ul
        - @specialisation.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :spec_cat_id
    = f.number_field :spec_cat_id
  .field
    = f.label :specialisation_id
    = f.number_field :specialisation_id
  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
