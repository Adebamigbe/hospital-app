= form_for @search do |f|
  - if @search.errors.any?
    #error_explanation
      %h2= "#{pluralize(@search.errors.count, "error")} prohibited this search from being saved:"
      %ul
        - @search.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :search_history
    = f.text_field :search_history
  .field
    = f.label :lat
    = f.number_field :lat
  .field
    = f.label :lng
    = f.number_field :lng
  .field
    = f.label :address
    = f.text_area :address
  .actions
    = f.submit 'Save'
