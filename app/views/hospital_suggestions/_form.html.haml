= form_for @hospital_suggestion do |f|
  - if @hospital_suggestion.errors.any?
    #error_explanation
      %h2= "#{pluralize(@hospital_suggestion.errors.count, "error")} prohibited this hospital_suggestion from being saved:"
      %ul
        - @hospital_suggestion.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :hospital_id
    = f.number_field :hospital_id
  .actions
    = f.submit 'Save'
